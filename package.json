{
  "name": "sketch-material",
  "version": "2.0.2",
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "sketch-material",
    "manifest": "src/manifest.json",
    "main": "sketch-material.sketchplugin"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link",
    "publish": "skpm-build && skpm publish patch --repo-url=git@github.com:websiddu/sketch-material.git"
  },
  "devDependencies": {
    "@skpm/builder": "^0.7.4",
    "@skpm/extract-loader": "^2.0.2",
    "css-loader": "^3.3.0",
    "html-loader": "^0.5.5"
  },
  "resources": [
    "resources/**/*.js"
  ],
  "dependencies": {
    "sketch-module-web-view": "^2.0.0"
  },
  "author": "Siddhartha <gsid@google.com>"
}
